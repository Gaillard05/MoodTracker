<?xml version="1.0" encoding="UTF-8"?>

    <android.support.constraint.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.maylis.moodtracker.MainActivity"
    android:background="@color/light_sage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main_layout_colors">

    <ImageView
        android:layout_height="305dp"
        android:layout_width="338dp"
        android:id="@+id/activity_main_mood_happy_img"
        app:srcCompat="@drawable/smiley_happy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/smiley" />

    <Button
        android:background="@drawable/button_comment"
        android:layout_height="72dp"
        android:layout_width="55dp"
        android:id="@+id/activity_main_comment_mood_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.958"/>

    <Button
        android:background="@drawable/button_history"
        android:layout_height="69dp"
        android:layout_width="74dp"
        android:id="@+id/activity_main_history_mood_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.958"/>

</android.support.constraint.ConstraintLayout>